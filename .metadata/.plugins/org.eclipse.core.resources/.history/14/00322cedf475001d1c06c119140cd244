package edu.kh.op.ex;

// 예제 코드 작성용 클래스
public class OpExample {
	
	// 기능 메소드 method : 객체 지향 프로그래밍에서
	// 객체와 관련된 서브루틴 or 함수
	public void ex1() {
		// void : return 값이 없는 메소드에 작성
		System.out.println("OpExample 클래스에 ex1() 기능 수행");
		
		
	}

	// tip! 하나의 메소드 안에는 하나의 기능만 정의해야함
	public void ex2() { 
		int iNum1 = 10;
		int iNum2 = 10;
		
		iNum1++;
		iNum2--;
		
		System.out.println("iNum1:" + iNum1); // 10
		System.out.println("iNum2:" + iNum2); // 10
		
			
		
	}

	public void ex3() {
		// 전위연산 : ++3, --2 연산자가 앞쪽에 배치
		// -> 다른 연산보다 먼저 증감 / 감소
		int temp1 = 5;
		System.out.println(++temp1 +5);
		      //    => 6(여기 먼저 더해줌) + 5 == 11
			
		// 후위연산 : 10++, 6-- 연산자가 뒤쪽에 배치
		// -> 다른 연산자보다 나중에 증가/감소
		
		int temp2 = 3;
		System.out.println(temp2-- + 2); 
		     // 3 + 2 = 5    // 계산은 실질적으로 5값이 나오고 추후에 마이너스임
		     // temp2 <= 2 (1감소)
		
		System.out.println(temp2);
		
	}
	
    public void ex4() {
    	// 비교연산자 : > , < , >= , <= , == , !=
    	// - 비교 연산자의 결과는 항상 논리값(true/false)
    	// - 등호(=)가 포함된 연산자에서 등호(=)는 항상 오른쪽!
    	
    	// 같다 기호는?? = (x, 대입연산자) , == (ㅇ)

    	int a = 10;
    	int b = 20;
    	
    	System.out.println( a > b );  // false
    	System.out.println( a < b );  // true
    	System.out.println( a != b );  // true
    	System.out.println( (a == b ) == false ); // true
    	       // () 괄호 안에 있는거 먼저 연산
    	       // false == false --> true
    	
    	 int c = 4;
    	 int d = 5;
    	 System.out.println( c + 1 <= d ); // true
    	       // 산술연산이 비교연산보다 우선순위 높다!
    	 
    	 int temp = 723;
    	 
    	 System.out.println("temp는 짝수?" + (temp % 2 == 0 ));
    			 
    	
		
		
		
	}

}

